


html, body
	width 100%
	height 100%
	padding 0
	margin 0

.dg
	opacity 0.8


#instructions, #keyboardOrIpad, #ipadInstructions
	font-family 'Lato', Helvetica, sans-serif
	width 40%
	position absolute
	left 0
	right 0
	top 50%
	margin-top -120px
	margin-left auto
	margin-right auto
	z-index 11
	text-align center
	&.hidden
		display none
	h2
		color white
		text-align center
		font-size 1.4vw
		font-weight 700
		line-height 3vw
		letter-spacing 0.01em
		span
			font-size 3vw
			letter-spacing 0.08em
	.instruction, .choice
		width 33.3%
		height 100%
		float left
		position relative
		-webkit-transition opacity 0.75s
		&.hidden
			opacity 0
			-webkit-transition opacity 1s
		img
			display block
			width 66%
			margin auto
		h1
			color white
			text-align center
			font-size 1.4vw
			position absolute
			font-weight 700
			left 0
			right 0
			letter-spacing 0.01em

#ipadInstructions
	-webkit-transform translateY(1px)
	-webkit-transition -webkit-transform 0.33s
	-webkit-transition-timing-function easeOutQuad
	&.upAndAway
		-webkit-transform translateY(-1000px)
	&.downAndOut
		-webkit-transform translateY(1000px)


#keyboardOrIpad
	margin-top -160px
	&.hidden
		display none
	.choice
		width 50%
		cursor pointer
		-webkit-transform translateY(1px)
		-webkit-transition -webkit-transform 0.33s
		-webkit-transition-timing-function easeOutQuad
		&#keyboard
			-webkit-transition-delay 0.25s
		&.upAndAway
			-webkit-transform translateY(-1000px)
		&.downAndOut
			-webkit-transform translateY(1000px)
		img
			-webkit-transition -webkit-transform 0.2s
	.choice:hover
		img
			-webkit-transform scale(1.04)


.accept
	position absolute
	top 10
	right 10
	z-index 12
	font-family 'Lato', Helvetica, sans-serif
	font-weight 700
	letter-spacing 0.066em
	color white
	-webkit-animation acceptFlash 2s infinite
	&.hidden
		display none

@-webkit-keyframes acceptFlash
	0%
		opacity 0
	50%
		opacity 1
	100%
		opacity 0

#magic
	width 100%
	height 100%
	background grey

#twoMagic
	width 100%
	height 100%
	position absolute
	top 0
	left 0
	-webkit-transition -webkit-transform 0.2s
	&.squashX
		-webkit-transform scaleX(0)
	&.squashY
		-webkit-transform scaleY(0)

#foreground
	position absolute
	z-index 2

#middleground
	position absolute
	z-index 1

#illustrations
	display none

#text, #quotes
	width 100%
	height 100%
	position absolute
	top 0
	left 0
	z-index 4
	span
		width 100%
		float left
		font-family: 'Oswald', Helvetica, sans-serif;
		font-weight bold
		text-transform uppercase
		font-size 50vmin
		margin 0
		text-align center
		position absolute
		opacity 0
		z-index 5
		&.show
			opacity 1
		&.top
			top -80px
		&.bottom
			bottom -80px
		&#bisque
			font-size 40vmin
			margin-top 40px
		&#bisque, &#lin
			color #efcd0b
		&#rage, &#ber
			color #cc0000
#quotes
	span
		-webkit-transition opacity 2s
		margin-top 55px
		colour white
		font-size 15vw
		line-height 28vh
		letter-spacing -0.005em
		&.show
			opacity 0.66

#photo
	width 100%
	height 100%
	position absolute
	top 0
	left 0
	z-index 3
	background-size cover
	opacity 0
	-webkit-transition opacity 0.5s
	&.show
		opacity 0.8
		// base64 these so they load immidietly
	&.angela
		background-image url('../Assets/angela.gif')
	&.kiss
		background-image url('../Assets/kiss.gif')
	&.wall
		background-image url('../Assets/fallwall.gif')
	&.ruins
		background-image url('../Assets/ruins.gif')

#debugVisualiser
	width 300px
	height 150px
	background white
	border 3px solid red
	position absolute
	left 0
	top 0
	z-index 10
	opacity 0
