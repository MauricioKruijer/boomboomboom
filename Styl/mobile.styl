body, html
	padding 0
	margin 0
	background-color black
	-webkit-transition background-color 0.1s
	&.press
		background-color #444444

*
	-webkit-box-sizing: border-box
	box-sizing: border-box

#introWrapper
	height 100%
	width 100%
	background #f7bb07
	position absolute
	z-index 3
	text-align center
	-webkit-transition -webkit-transform 0.3s
	&.downAndOut
		-webkit-transform translateY(999px)
	&.hidden
		display none
	#intro
		position relative
		top 50%
		margin-top -200px
		h1	
			font-size 2.3em
			color white
			font-family 'Lato', Helvetica, sans-serif
			margin-bottom 40px
		#inputKey
			font-size 3em
			font-family 'Lato', Helvetica, sans-serif
			text-align center
			border-radius 0
			border 20px solid black
			width 33%
			letter-spacing 0.02em
			margin-bottom 25px
		#submitKey
			background none
			border none
			font-size 1.5em
			font-family 'Lato', Helvetica, sans-serif



#keypadWrapper
	width 100%
	height 100%
	position absolute
	z-index 2

#keypad
	display table
	width 100%
	height 100%

.row
	display table
	width 100%
	height 25%
	table-layout fixed

.button
	display table-cell
	text-align center
	vertial-align middle
	width 100%
	width auto
	border-radius 5px
	// outline 1px solid black
	outline-offset -10px
	padding 5px
	webkit-transition -webkit-transform 0.2s
	&.pushed
		-webkit-transform scale(0.93)
	img
		width 100%
		margin-top 35%